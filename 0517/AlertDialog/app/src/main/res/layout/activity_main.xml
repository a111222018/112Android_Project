<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="關於本書"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="結束程式"
        app:layout_constraintEnd_toEndOf="@+id/btnabout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnabout"
        app:layout_constraintTop_toBottomOf="@+id/btnabout" />

    <Button
        android:id="@+id/btncolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="指定色彩"
        app:layout_constraintEnd_toEndOf="@+id/btnexit"
        app:layout_constraintStart_toStartOf="@+id/btnexit"
        app:layout_constraintTop_toBottomOf="@+id/btnexit" />

    <Button
        android:id="@+id/btnselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="選擇手機"
        app:layout_constraintEnd_toEndOf="@+id/btncolor"
        app:layout_constraintStart_toStartOf="@+id/btncolor"
        app:layout_constraintTop_toBottomOf="@+id/btncolor" />

    <TextView
        android:id="@+id/txtoutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/btnselect"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/btnselect"
        app:layout_constraintTop_toBottomOf="@+id/btnselect" />
</androidx.constraintlayout.widget.ConstraintLayout>